<Window x:Class="Warehouse.DesktopApplication.UpdateRequestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Warehouse.DesktopApplication"
        mc:Ignorable="d"
        Title="UpdateRequestWindow" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <StackPanel Margin="10" Grid.Column="0" Grid.Row="0" Grid.RowSpan = "2">

            <TextBlock HorizontalAlignment="Center" Margin="5 20 5 5">Enter target date</TextBlock>
            <TextBox x:Name="requestTargetDateTextBox" Margin="10"></TextBox>

            <TextBlock HorizontalAlignment="Center" Margin="5 20 5 5">Write employee id</TextBlock>
            <TextBox x:Name="employeeIdTextBox" Margin="10" PreviewTextInput="PreviewTextInputNumbers"></TextBox>

            <Button Height="25" Margin="5 30 5 5"  FontWeight="Bold" Click="Button_Click">Update</Button>
        </StackPanel>

    </Grid>
</Window>
