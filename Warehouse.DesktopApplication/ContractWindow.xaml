<Window x:Class="Warehouse.DesktopApplication.ContractWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Warehouse.DesktopApplication"
        mc:Ignorable="d"
        Title="ContractWindow" Height="450" Width="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <GroupBox Padding="3" Margin="5" Grid.Column="0" Grid.Row="0" Grid.RowSpan="3" Background= "DarkGray">
            <StackPanel>
                <Button Height="25" Margin="5 20 5 5" Click="getAllContracts_Click" FontWeight="Bold">Update list</Button>
                <TextBlock HorizontalAlignment="Center" Margin="5 20 5 5">Enter contract id</TextBlock>
                <TextBox x:Name="contractIdTextBox" PreviewTextInput="PreviewTextInputNumbers"></TextBox>
                
                <Button Height="25" Margin="5" Click="findContracts_Click" FontWeight="Bold">Find contract</Button>
                <TextBlock HorizontalAlignment="Center" Margin="5 20 5 5">Enter new expiry date</TextBlock>
                <TextBox x:Name="expyryTimeTexBox">01.01.2222 01:01:01</TextBox>
                <Button Height="25" Margin="5" Click="updateContracts_Click" FontWeight="Bold">Update</Button>

                <TextBlock HorizontalAlignment="Center" Margin="5 20 5 5">Enter start date</TextBlock>
                <TextBox x:Name="startDateCreateTextBox" PreviewTextInput="PreviewTextInputNumbers">01.01.2222 01:01:01</TextBox>
                <TextBlock HorizontalAlignment="Center" Margin="5">Enter expiry date</TextBlock>
                <TextBox x:Name="expiryDateCreateTextBox" PreviewTextInput="PreviewTextInputNumbers">01.01.2222 01:01:01</TextBox>
                <Button Height="25" Margin="5" Click="addNewContracts_Click" FontWeight="Bold">Create new contract</Button>
            </StackPanel>
        </GroupBox>

        <GroupBox Padding="3" Margin="5" Grid.Column="4" Grid.Row="0" Grid.RowSpan="1" Background= "DarkGray">
            <StackPanel>
                <ComboBox Name="containersList" Margin="5"  Height="30" VerticalAlignment="Top"></ComboBox>
                <Button Height="25" Margin="5" FontWeight="Bold">Add to list</Button>
                <Button Height="25" Margin="5" FontWeight="Bold">Delete from list</Button>
            </StackPanel>
        </GroupBox>

        <DataGrid x:Name="contractGrid" Margin="5" Grid.Column="1" Grid.Row="0" Grid.RowSpan="3" Grid.ColumnSpan="2" 
                  AutoGenerateColumns="False" HorizontalGridLinesBrush="DarkGray"
    RowBackground="LightGray" AlternatingRowBackground="White" MouseDoubleClick="Row_MouseDoubleClick">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Contract id" Binding="{Binding Id}"/>
                <DataGridTextColumn Header="Credential" Binding="{Binding Credential}"/>
                <DataGridTextColumn Header="Start date" Binding="{Binding StartDate}"/>
                <DataGridTextColumn Header="Expyry date" Binding="{Binding ExpiryDate}"/>
            </DataGrid.Columns>
        </DataGrid>

        <DataGrid x:Name="containerListGrid" Margin="5" Grid.Column="3" Grid.Row="1" Grid.RowSpan="2" Grid.ColumnSpan="2" 
                  AutoGenerateColumns="False" HorizontalGridLinesBrush="DarkGray"
    RowBackground="LightGray" AlternatingRowBackground="White" MouseDoubleClick="Row_MouseDoubleClick">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Id"/>
                <DataGridTextColumn Header="Type"/>
                <DataGridTextColumn Header="Price"/>
            </DataGrid.Columns>
        </DataGrid>
        
    </Grid>
</Window>
